<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.momentum.stock.stockanalyzer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".UtilClasses.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.StockSelectActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.HomeActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.StockActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.StockDetailActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.momentum.stock.stockanalyzer.Activities.MyPortfolioActivity" android:screenOrientation="portrait"/>

    </application>

</manifest>